<header class="container-header">
  <div>
    <i class="bi bi-file-person-fill text-dark dark:text-light"></i>
    Fabricio's Portfolio
  </div>
  <button title="Settings">
    <i class="bi bi-gear-fill text-dark dark:text-light"></i>
  </button>
  
</header>
<style>
	.container-header {
		list-style: none;
		display: flex;
    justify-content: space-between;
		padding: 12px;
    width: 100vw;
		background-image: none;
		background-size: 400%;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.container-header:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.container-header:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
